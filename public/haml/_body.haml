.row
  .small-12.columns
    %h1 Concert Tickets
.row.adminControls
  .small-3.columns
    %select#select
      %option General Admission
      %option VIP
  .small-3.columns
    %input#number{type: 'text', autofocus: 'true', placeholder: 'number of seats'}
  .small-3.columns
    %input#price{type: 'text', placeholder: 'seat price'}
  .small-3.columns
    %input#createSeats.button.small.radius.success{type: 'button', value: 'Create Seats'}
.row
  .small-12.columns
    .filler
.row
  .small-4.columns
    %h4 Reporting
    .small-6.columns
      %table
        %th Totals
        %tr
          %td Total VIP:
          %td#totalVip
        %tr
          %td Total GA:
          %td#totalGa
        %tr
          %td Grand Total:
          %td#grandTotal
        %tr
          %td VIP Tickets:
          %td#vipTickets
        %tr
          %td GA Tickets:
          %td#gaTickets
        %tr
          %td Total Tickets:
          %td#totalTickets
    .small-6.columns
      %ul#seatList
        Seat List
        %li
          VIP:
          %ul#vipSeatList
        %li
          General:
          %ul#gaSeatList
  .small-8.columns
    .row
      .small-6.columns.small-offset-3
        %input#name{type: 'text', placeholder: 'name'}
        #stage
          %h1 STAGE
        .filler
    .row
      .small-12.columns#wrapper
        #vip
        .filler
        #general

